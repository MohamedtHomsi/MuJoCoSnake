<mujoco model="simple_test_screw">
  <compiler angle="degree" coordinate="local" autolimits="true"/>
  <option timestep="0.002" gravity="0 0 -9.81" integrator="implicitfast"/>

  <default>
    <geom rgba="0.8 0.8 0.8 1" condim="6" friction="2.0 0.01 0.002"/>
    <joint damping="0.05"/>
  </default>

  <worldbody>
    <!-- Simple high-friction ground -->
    <geom name="ground" type="plane" size="10 10 0.1" rgba="0.3 0.3 0.3 1" 
          friction="4.0 0.01 0.002" condim="6"/>

    <!-- Single screw vehicle -->
    <body name="vehicle" pos="0 0 0.08">
      <!-- Sliding along X only (Y and rotation locked) -->
      <joint name="slide_x" type="slide" axis="1 0 0" limited="false" damping="0.2"/>
      <joint name="slide_z" type="slide" axis="0 0 1" limited="false" damping="0.5"/>
      
      <!-- Central body -->
      <geom name="chassis" type="box" size="0.08 0.06 0.03" pos="0 0 0.03" 
            rgba="0.2 0.2 0.3 1" mass="0.5"/>
      
      <!-- Screw that rotates about X-axis -->
      <body name="screw" pos="0 0 0">
        <joint name="spin" type="hinge" axis="1 0 0" limited="false" damping="0.01"/>
        
        <!-- Core cylinder (no contact) -->
        <geom name="core" type="cylinder" fromto="-0.15 0 0  0.15 0 0" size="0.03" 
              rgba="0.8 0.2 0.2 1" mass="0.3" contype="0" conaffinity="0"/>
        
        <!-- STEEP helix blades - key is to make them ANGLED and LONG -->
        <!-- These create a helical pattern with steeper pitch -->
        <!-- Blade 1 -->
        <geom type="box" size="0.03 0.06 0.008" pos="-0.10 0 0.04" 
              quat="0.924 0 0.383 0" rgba="0.9 0.3 0.3 1" 
              friction="5.0 0.01 0.002" condim="6" mass="0.02"/>
        
        <!-- Blade 2 (90 degrees around) -->
        <geom type="box" size="0.03 0.06 0.008" pos="-0.05 0.04 0" 
              quat="0.924 0.383 0 0" rgba="0.9 0.3 0.3 1" 
              friction="5.0 0.01 0.002" condim="6" mass="0.02"/>
        
        <!-- Blade 3 (180 degrees) -->
        <geom type="box" size="0.03 0.06 0.008" pos="0.00 0 -0.04" 
              quat="0.924 0 0.383 0" rgba="0.9 0.3 0.3 1" 
              friction="5.0 0.01 0.002" condim="6" mass="0.02"/>
        
        <!-- Blade 4 (270 degrees) -->
        <geom type="box" size="0.03 0.06 0.008" pos="0.05 -0.04 0" 
              quat="0.924 0.383 0 0" rgba="0.9 0.3 0.3 1" 
              friction="5.0 0.01 0.002" condim="6" mass="0.02"/>
        
        <!-- Blade 5 -->
        <geom type="box" size="0.03 0.06 0.008" pos="0.10 0 0.04" 
              quat="0.924 0 0.383 0" rgba="0.9 0.3 0.3 1" 
              friction="5.0 0.01 0.002" condim="6" mass="0.02"/>
      </body>
    </body>
  </worldbody>

  <actuator>
    <velocity name="motor" joint="spin" kv="20"/>
  </actuator>
</mujoco>

